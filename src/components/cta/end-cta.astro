---
import { clsx, getBackgroundColorClass } from "@utils/index";

interface Props {
	title: string;
	cta_label: string;
	bg_colour: string;
	xHandle?: string;
	link?: string;
}

const { title, cta_label, bg_colour, xHandle, link }: Props = Astro.props;
---

<div
	class={clsx(
		"flex flex-row w-full items-center justify-between gap-3 p-6 relative transition-all duration-75 ease-in-out rounded-2xl",
		getBackgroundColorClass(bg_colour),
	)}
>
	<div class="w-full flex flex-col gap-3">
		<h5
			class="text-gray-950 dark:text-gray-950 font-medium w-full sm:text-xl md:text-2xl leading-tight"
		>
			{title}
		</h5>

		<div class="w-full flex flex-row gap-2">
			<button
				id="button-schedule-meeting"
				data-umami-event={link
					? `cta-custom-link-${cta_label}`
					: "cta-schedule-meeting"}
				class={clsx(
					"bg-gray-950 text-white font-medium py-2 px-4 rounded-full w-fit",
				)}
				onclick={`window.location.href='mailto:kkeerthirao98@gmail.com'`}
			>
				{cta_label}
			</button>

			<button
				id="button-email-me"
				data-umami-event="cta-email-me"
				class="text-black font-medium py-2 px-4 rounded-full w-fit underline underline-offset-2"
				onclick="window.location.href=`mailto:kkeerthirao98@gmail.com?subject=Let's%20Connect&body=Hi%20Keerthi%2C%0A%0AI%20came%20across%20your%20portfolio%20and%20was%20impressed.%20I%20would%20love%20to%20discuss%20potential%20opportunities.%0A%0ABest%20regards%2C%0A%5BYour%20Name%5D`"
			>
				Email me
			</button>
		</div>
	</div>
</div>

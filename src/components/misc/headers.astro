---
import HeaderLink from "./header-link.astro";
import ThemeSwitcher from "./theme-switcher.astro";
import { menuItems } from "@data/index";
---

<nav
	class="fixed top-4 sm:top-6 left-1/2 -translate-x-1/2 z-50 flex items-center gap-3 sm:gap-6 px-4 py-2 sm:px-6 sm:py-3 rounded-full bg-white/80 dark:bg-gray-900/80 backdrop-blur-xl border border-white/20 dark:border-gray-800 shadow-lg shadow-black/5 transition-all duration-300 hover:bg-white/95 dark:hover:bg-gray-900/95 hover:shadow-xl hover:scale-[1.01] w-max max-w-[95vw]"
>
	<!-- Navigation Links -->
	<div
		class="flex flex-row gap-1.5 sm:gap-6 font-medium items-center text-xs sm:text-base"
	>
		{
			menuItems.map((item) => (
				<HeaderLink
					href={item.url}
					class="relative px-2 py-1.5 transition-colors hover:text-black dark:hover:text-white whitespace-nowrap"
				>
					{item.label}
				</HeaderLink>
			))
		}
	</div>

	<!-- Divider -->
	<div class="w-px h-4 sm:h-5 bg-gray-300 dark:bg-gray-700 mx-0 sm:mx-1">
	</div>

	<!-- Theme Switcher -->
	<div class="flex items-center shrink-0">
		<ThemeSwitcher />
	</div>
</nav>

<!-- Push content down slightly so it's not hidden by the fixed nav on load, though the header is usually transparent/distinct -->
<div class="h-16 sm:h-20 w-full pointer-events-none"></div>

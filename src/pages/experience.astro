---
import { Header } from "@components/misc";
import { BaseHead } from "@components/seo";
import { SITE_DESCRIPTION } from "@data/index";
import RootLayout from "@layouts/root-layout.astro";
---

<!doctype html>
<html lang="en">
    <head>
        <BaseHead
            title="Keerthi Kovuru — Experience"
            description={SITE_DESCRIPTION}
            image="/images/ogimage.png"
        />
    </head>

    <RootLayout>
        <div id="navbar+title" class="flex flex-col w-full gap-6 max-w-xl">
            <Header />
            <div class="flex flex-col gap-12 sm:gap-14 mb-16 mt-8">
                <section>
                    <h2
                        class="text-3xl font-bold mb-10 text-black dark:text-gray-100 tracking-tight"
                    >
                        Experience
                    </h2>

                    <div class="flex flex-col gap-12">
                        <!-- Deloitte (Work - Royal Blue for Corporate/Professional) -->
                        <div
                            class="relative pl-8 border-l border-gray-200 dark:border-gray-800"
                        >
                            <!-- Timeline Dot -->
                            <div
                                class="absolute -left-[5px] top-2 h-2.5 w-2.5 rounded-full bg-blue-700 ring-4 ring-white dark:ring-black shadow-sm"
                            >
                            </div>

                            <div
                                class="flex flex-col sm:flex-row sm:justify-between sm:items-baseline mb-4"
                            >
                                <div class="flex flex-col">
                                    <h3
                                        class="text-xl font-bold text-gray-900 dark:text-gray-100 tracking-tight"
                                    >
                                        Associate Solution Advisor
                                    </h3>
                                    <span
                                        class="text-blue-800 dark:text-blue-300 font-bold text-lg"
                                        >Deloitte</span
                                    >
                                </div>
                                <span
                                    class="text-sm font-medium text-blue-900 dark:text-blue-200 mt-1 sm:mt-0 font-mono bg-blue-50 dark:bg-blue-900/30 px-2 py-1 rounded border border-blue-100 dark:border-blue-800"
                                    >2022 - 2025</span
                                >
                            </div>
                            <p
                                class="text-sm text-gray-500 dark:text-gray-400 mb-6 font-medium flex items-center gap-2"
                            >
                                <svg
                                    xmlns="http://www.w3.org/2000/svg"
                                    width="14"
                                    height="14"
                                    viewBox="0 0 24 24"
                                    fill="none"
                                    stroke="currentColor"
                                    stroke-width="2"
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    ><path
                                        d="M20 10c0 6-8 12-8 12s-8-6-8-12a8 8 0 0 1 16 0Z"
                                    ></path><circle cx="12" cy="10" r="3"
                                    ></circle></svg
                                >
                                Client: Meta (Facebook) • Hyderabad, India
                            </p>

                            <ul
                                class="flex flex-col gap-4 text-[15px] text-gray-600 dark:text-gray-300 leading-relaxed"
                            >
                                <li
                                    class="relative pl-4 before:content-[''] before:absolute before:left-0 before:top-2.5 before:w-1.5 before:h-1.5 before:bg-gray-300 dark:before:bg-gray-600 before:rounded-full"
                                >
                                    Managed <strong
                                        class="font-semibold text-gray-900 dark:text-gray-100"
                                        >500+ third-party risk assessments</strong
                                    > for global clients like Meta & FIFA, evaluating
                                    security posture against <span
                                        class="text-gray-800 dark:text-gray-200 bg-gray-100 dark:bg-gray-800 px-1 py-0.5 rounded text-xs font-medium"
                                        >NIST 800-53, SOC 2, ISO 27001</span
                                    >.
                                </li>
                                <li
                                    class="relative pl-4 before:content-[''] before:absolute before:left-0 before:top-2.5 before:w-1.5 before:h-1.5 before:bg-gray-300 dark:before:bg-gray-600 before:rounded-full"
                                >
                                    Built the <strong
                                        class="font-semibold text-gray-900 dark:text-gray-100"
                                        >Cryptographic Governance Program</strong
                                    >, defining standards for AWS KMS, Azure Key
                                    Vault, and HSMs.
                                </li>
                                <li
                                    class="relative pl-4 before:content-[''] before:absolute before:left-0 before:top-2.5 before:w-1.5 before:h-1.5 before:bg-gray-300 dark:before:bg-gray-600 before:rounded-full"
                                >
                                    Conducted technical deep-dives on
                                    Penetration Test reports and Secure SDLC
                                    policies to validate vendor controls.
                                </li>
                                <li
                                    class="relative pl-4 before:content-[''] before:absolute before:left-0 before:top-2.5 before:w-1.5 before:h-1.5 before:bg-gray-300 dark:before:bg-gray-600 before:rounded-full"
                                >
                                    Technical lead for external audits,
                                    partnering with engineering teams to close
                                    findings and improve security maturity.
                                </li>
                            </ul>
                        </div>

                        <!-- Metrics4 (Work - Royal Blue) -->
                        <div
                            class="relative pl-8 border-l border-gray-200 dark:border-gray-800"
                        >
                            <div
                                class="absolute -left-[5px] top-2 h-2.5 w-2.5 rounded-full bg-blue-700 ring-4 ring-white dark:ring-black shadow-sm"
                            >
                            </div>

                            <div
                                class="flex flex-col sm:flex-row sm:justify-between sm:items-baseline mb-4"
                            >
                                <div class="flex flex-col">
                                    <h3
                                        class="text-xl font-bold text-gray-900 dark:text-gray-100 tracking-tight"
                                    >
                                        Financial Analyst
                                    </h3>
                                    <span
                                        class="text-blue-800 dark:text-blue-300 font-bold text-lg"
                                        >Metrics4 Analytics</span
                                    >
                                </div>
                                <span
                                    class="text-sm font-medium text-blue-900 dark:text-blue-200 mt-1 sm:mt-0 font-mono bg-blue-50 dark:bg-blue-900/30 px-2 py-1 rounded border border-blue-100 dark:border-blue-800"
                                    >2020 - 2021</span
                                >
                            </div>
                            <p
                                class="text-sm text-gray-500 dark:text-gray-400 mb-6 font-medium flex items-center gap-2"
                            >
                                <svg
                                    xmlns="http://www.w3.org/2000/svg"
                                    width="14"
                                    height="14"
                                    viewBox="0 0 24 24"
                                    fill="none"
                                    stroke="currentColor"
                                    stroke-width="2"
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    ><path
                                        d="M20 10c0 6-8 12-8 12s-8-6-8-12a8 8 0 0 1 16 0Z"
                                    ></path><circle cx="12" cy="10" r="3"
                                    ></circle></svg
                                >
                                Hyderabad, India
                            </p>

                            <ul
                                class="flex flex-col gap-4 text-[15px] text-gray-600 dark:text-gray-300 leading-relaxed"
                            >
                                <li
                                    class="relative pl-4 before:content-[''] before:absolute before:left-0 before:top-2.5 before:w-1.5 before:h-1.5 before:bg-gray-300 dark:before:bg-gray-600 before:rounded-full"
                                >
                                    Processed event-driven data & analytics for <strong
                                        class="font-semibold text-gray-900 dark:text-gray-100"
                                        >4,000+ U.S. public organizations</strong
                                    >, analyzing SEC filings (10-K, 10-Q).
                                </li>
                                <li
                                    class="relative pl-4 before:content-[''] before:absolute before:left-0 before:top-2.5 before:w-1.5 before:h-1.5 before:bg-gray-300 dark:before:bg-gray-600 before:rounded-full"
                                >
                                    Enhanced data accuracy for investor
                                    relations & proxy decision-making
                                    intelligence.
                                </li>
                            </ul>
                        </div>
                    </div>
                </section>

                <section>
                    <h2
                        class="text-3xl font-semibold mb-8 text-black dark:text-gray-100 tracking-tight"
                    >
                        Education
                    </h2>
                    <div class="flex flex-col gap-12">
                        <!-- MBA (Education - Slate Gray for distinction) -->
                        <div
                            class="relative pl-8 border-l border-gray-200 dark:border-gray-800"
                        >
                            <div
                                class="absolute -left-[5px] top-2 h-2.5 w-2.5 rounded-full bg-slate-500 ring-4 ring-white dark:ring-black shadow-sm"
                            >
                            </div>

                            <div
                                class="flex flex-col sm:flex-row sm:justify-between sm:items-baseline mb-1"
                            >
                                <h3
                                    class="text-lg font-bold text-gray-900 dark:text-gray-100"
                                >
                                    Master of Business Administration (MBA)
                                </h3>
                                <span
                                    class="text-sm font-medium text-slate-700 dark:text-slate-300 font-mono bg-slate-100 dark:bg-slate-800 px-2 py-1 rounded"
                                    >2020 - 2022</span
                                >
                            </div>
                            <p
                                class="text-slate-600 dark:text-slate-400 font-semibold mb-3"
                            >
                                Institute of Public Enterprise
                            </p>
                            <p
                                class="text-sm text-gray-600 dark:text-gray-400 leading-relaxed"
                            >
                                <span
                                    class="uppercase tracking-wider text-xs font-bold text-gray-400"
                                    >Relevant Coursework</span
                                ><br />
                                Finance, Data Governance, Enterprise Risk Management,
                                Business Analytics.
                            </p>
                        </div>

                        <!-- Bachelors (Education - Slate Gray) -->
                        <div
                            class="relative pl-8 border-l border-gray-200 dark:border-gray-800"
                        >
                            <div
                                class="absolute -left-[5px] top-2 h-2.5 w-2.5 rounded-full bg-slate-500 ring-4 ring-white dark:ring-black opacity-50 shadow-sm"
                            >
                            </div>

                            <div
                                class="flex flex-col sm:flex-row sm:justify-between sm:items-baseline mb-1"
                            >
                                <h3
                                    class="text-lg font-bold text-gray-900 dark:text-gray-100"
                                >
                                    Bachelor of Engineering (BE)
                                </h3>
                                <span
                                    class="text-sm font-medium text-slate-700 dark:text-slate-300 font-mono bg-slate-100 dark:bg-slate-800 px-2 py-1 rounded"
                                    >2016 - 2020</span
                                >
                            </div>
                            <p
                                class="text-slate-600 dark:text-slate-400 font-semibold mb-1"
                            >
                                Matrusri Engineering College
                            </p>
                            <p class="text-sm text-gray-500 mb-2">
                                Electronics and Communication Engineering
                            </p>
                            <div
                                class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-gray-100 text-gray-800 dark:bg-gray-800 dark:text-gray-200"
                            >
                                Grade: 8.10
                            </div>
                        </div>
                    </div>
                </section>
            </div>
        </div>
    </RootLayout>
</html>
